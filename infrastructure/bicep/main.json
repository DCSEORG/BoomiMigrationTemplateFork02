{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "17708180137232032448"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name (e.g., dev, test, prod)"
      }
    },
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "SQL Server name"
      }
    },
    "sqlDatabaseName": {
      "type": "string",
      "metadata": {
        "description": "SQL Database name"
      }
    },
    "sqlUsername": {
      "type": "string",
      "metadata": {
        "description": "SQL Server username"
      }
    },
    "sqlPassword": {
      "type": "securestring",
      "metadata": {
        "description": "SQL Server password"
      }
    },
    "oracleHost": {
      "type": "string",
      "metadata": {
        "description": "Oracle host"
      }
    },
    "oraclePort": {
      "type": "string",
      "defaultValue": "1521",
      "metadata": {
        "description": "Oracle port"
      }
    },
    "oracleServiceName": {
      "type": "string",
      "metadata": {
        "description": "Oracle service name"
      }
    },
    "oracleUsername": {
      "type": "string",
      "metadata": {
        "description": "Oracle username"
      }
    },
    "oraclePassword": {
      "type": "securestring",
      "metadata": {
        "description": "Oracle password"
      }
    },
    "pollingIntervalSeconds": {
      "type": "int",
      "defaultValue": 60,
      "metadata": {
        "description": "Polling interval in seconds for SQL trigger"
      }
    }
  },
  "variables": {
    "resourcePrefix": "[format('sqltoora-{0}', parameters('environment'))]",
    "logicAppName": "[format('{0}-logicapp', variables('resourcePrefix'))]",
    "sqlApiConnectionName": "[format('{0}-sql-connection', variables('resourcePrefix'))]",
    "oracleApiConnectionName": "[format('{0}-oracle-connection', variables('resourcePrefix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('sqlApiConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "SQL Server Connection",
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'sql')]"
        },
        "parameterValues": {
          "server": "[parameters('sqlServerName')]",
          "database": "[parameters('sqlDatabaseName')]",
          "username": "[parameters('sqlUsername')]",
          "password": "[parameters('sqlPassword')]",
          "authType": "basic"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('oracleApiConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "Oracle Database Connection",
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'oracle')]"
        },
        "parameterValues": {
          "server": "[format('{0}:{1}/{2}', parameters('oracleHost'), parameters('oraclePort'), parameters('oracleServiceName'))]",
          "username": "[parameters('oracleUsername')]",
          "password": "[parameters('oraclePassword')]",
          "authType": "basic"
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[variables('logicAppName')]",
      "location": "[parameters('location')]",
      "tags": {
        "environment": "[parameters('environment')]",
        "purpose": "SQL to Oracle data synchronization",
        "migratedFrom": "Boomi"
      },
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "When_a_new_row_is_added": {
              "recurrence": {
                "frequency": "Second",
                "interval": "[parameters('pollingIntervalSeconds')]"
              },
              "splitOn": "@triggerBody()?['value']",
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['sql']['connectionId']"
                  }
                },
                "method": "get",
                "path": "[format('/v2/datasets/@{{encodeURIComponent(encodeURIComponent(''{0}.database.windows.net''))}},@{{encodeURIComponent(encodeURIComponent(''{1}''))}}/tables/@{{encodeURIComponent(encodeURIComponent(''[dbo].[Customer]''))}}/onnewitems', parameters('sqlServerName'), parameters('sqlDatabaseName'))]"
              }
            }
          },
          "actions": {
            "Transform_Data": {
              "runAfter": {},
              "type": "Compose",
              "inputs": {
                "id": "@triggerBody()?['CustomerId']",
                "fullName": "@triggerBody()?['Name']",
                "emailAddress": "@triggerBody()?['Email']"
              }
            },
            "Insert_into_Oracle": {
              "runAfter": {
                "Transform_Data": [
                  "Succeeded"
                ]
              },
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['oracle']['connectionId']"
                  }
                },
                "method": "post",
                "body": {
                  "ID": "@outputs('Transform_Data')?['id']",
                  "FULL_NAME": "@outputs('Transform_Data')?['fullName']",
                  "EMAIL_ADDRESS": "@outputs('Transform_Data')?['emailAddress']"
                },
                "path": "/datasets/default/tables/@{encodeURIComponent(encodeURIComponent('CUSTOMERS'))}/items"
              }
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "sql": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('sqlApiConnectionName'))]",
                "connectionName": "[variables('sqlApiConnectionName')]",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'sql')]"
              },
              "oracle": {
                "connectionId": "[resourceId('Microsoft.Web/connections', variables('oracleApiConnectionName'))]",
                "connectionName": "[variables('oracleApiConnectionName')]",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'oracle')]"
              }
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', variables('oracleApiConnectionName'))]",
        "[resourceId('Microsoft.Web/connections', variables('sqlApiConnectionName'))]"
      ]
    }
  ],
  "outputs": {
    "logicAppId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Logic/workflows', variables('logicAppName'))]"
    },
    "logicAppName": {
      "type": "string",
      "value": "[variables('logicAppName')]"
    },
    "sqlConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('sqlApiConnectionName'))]"
    },
    "oracleConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('oracleApiConnectionName'))]"
    }
  }
}